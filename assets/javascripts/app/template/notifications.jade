.container
  pre {{ customerAccount | json }}
  legend Sensor Alerts

  .form-group.col-xs-12(ng-repeat='sensorHubEvent in sensorHubEvents')
    label.col-xs-4 {{ sensorHubEvent.name }}
    .col-xs-8
      .btn-group
        a.btn.btn-default(ng-repeat='deliveryMethod in deliveryMethods', ng-class="{active:isChecked(sensorHubEvent.value, 'sensorHubEvent', deliveryMethod.name)}", ng-click="toggleNotification(sensorHubEvent.value, 'sensorHubEvent', deliveryMethod.name)")
          i(class='{{ deliveryMethod.icon }}')

  legend HomeBase Alerts
  .form-group.col-xs-12
    label.col-xs-4 Switching to backup battery
    .col-xs-8
      .btn-group
        a.btn.btn-default.active(ng-click="toggleNotification(1, 'gatewayEvent', 'Email')")
          i.icon-at
        a.btn.btn-default.active(ng-click="toggleNotification(1, 'gatewayEvent', 'Sms')")
          i.icon-mobile
  .form-group.col-xs-12
    label.col-xs-4 Switching to line power
    .col-xs-8
      .btn-group
        a.btn.btn-default.active
          i.icon-at
        a.btn.btn-default.active
          i.icon-mobile
